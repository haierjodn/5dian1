<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_orange_light_bg"
    tools:context="com.dmall.ods.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <net.dian1.player.widget.RoundImageView
            android:id="@+id/iv_portrait"
            android:layout_width="@dimen/user_portrait"
            android:layout_height="@dimen/user_portrait"
            android:src="@drawable/icon_portrait"
            android:layout_margin="15dp"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_portrait"
            android:layout_alignTop="@id/iv_portrait"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="亲爱的秦昊"
            android:textColor="@color/font_black"
            android:textSize="@dimen/normal_x" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nickname"
            android:layout_alignLeft="@id/tv_nickname"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金砖会员剩余90天，"
                android:textColor="#7f1d1d26"
                android:textSize="@dimen/normal" />

            <TextView
                android:id="@+id/tv_renewal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="续期"
                android:textColor="#7f1d1d26"
                android:textSize="@dimen/normal" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>