<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/FourWayMediaLayout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <net.dian1.player.widget.RoundImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:src="@drawable/no_cd_300"
            android:id="@+id/CoverImageView" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="在爱与痛的边缘"
                android:textSize="@dimen/normal_x"
                android:textColor="@color/font_blue"
                android:singleLine="true" />
            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="王菲"
                android:textSize="@dimen/normal"
                android:textColor="@color/font_gray"
                android:singleLine="true" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/PrevImageButton"
            android:background="@null"
            android:src="@drawable/player_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/PlayImageButton"
            android:background="@drawable/player_btn_play_y_normal"
            android:src="@drawable/player_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/NextImageButton"
            android:background="@null"
            android:src="@drawable/player_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp" />

    </LinearLayout>

</LinearLayout>

